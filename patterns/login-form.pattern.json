{
  "name": "LoginForm",
  "description": "Split-screen login with image and form",
  "structure": {
    "component": "Row",
    "props": {
      "gap": "md",
      "align": "center"
    },
    "children": [
      {
        "component": "Container",
        "props": {
          "size": "md",
          "padding": "none"
        },
        "children": [
          {
            "element": "img",
            "attributes": {
              "src": "https://images.unsplash.com/photo-1557683316-973673baf926?w=800&q=80",
              "alt": "Login visual",
              "style": "width: 100%; height: 100vh; object-fit: cover;"
            }
          }
        ]
      },
      {
        "component": "Container",
        "props": {
          "size": "md",
          "padding": "lg"
        },
        "children": [
          {
            "component": "Surface",
            "props": {
              "variant": "raised",
              "padding": "lg"
            },
            "children": [
              {
                "component": "Stack",
                "props": {
                  "gap": "lg",
                  "align": "center"
                },
                "children": [
                  {
                    "component": "Stack",
                    "props": {
                      "gap": "sm",
                      "align": "center"
                    },
                    "children": [
                      {
                        "element": "h2",
                        "content": "Welcome Back"
                      },
                      {
                        "element": "p",
                        "content": "Sign in to your account"
                      }
                    ]
                  },
                  {
                    "component": "Stack",
                    "props": {
                      "gap": "md",
                      "align": "start"
                    },
                    "children": [
                      {
                        "component": "Input",
                        "props": {
                          "type": "email",
                          "label": "Email",
                          "placeholder": "Enter your email",
                          "startIcon": "FaEnvelope"
                        }
                      },
                      {
                        "component": "PasswordInput",
                        "props": {
                          "label": "Password",
                          "placeholder": "Enter your password"
                        }
                      }
                    ]
                  },
                  {
                    "component": "Divider",
                    "props": {
                      "direction": "horizontal"
                    }
                  },
                  {
                    "component": "Row",
                    "props": {
                      "gap": "sm",
                      "align": "center"
                    },
                    "children": [
                      {
                        "component": "Button",
                        "props": {
                          "variant": "primary",
                          "size": "medium"
                        },
                        "content": "Sign In"
                      },
                      {
                        "component": "Button",
                        "props": {
                          "variant": "neutral",
                          "size": "medium"
                        },
                        "content": "Cancel"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
